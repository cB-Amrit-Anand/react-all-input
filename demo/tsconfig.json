{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vite/client", "node"],
    "baseUrl": ".",
    "paths": {
      "@react-all-input/*": ["../src/*"],
      "react": ["../node_modules/@types/react/index"],
      "react/jsx-runtime": ["../node_modules/@types/react/jsx-runtime"],
      "react-dom": ["../node_modules/@types/react-dom/index"],
      "react-dom/*": ["../node_modules/@types/react-dom/*"]
    }
  },
  "include": [
    "src",
    "../src/components/**/*.ts",
    "../src/components/**/*.tsx",
    "../src/global.d.ts",
    "../src/types/**/*.d.ts"
  ]
}
